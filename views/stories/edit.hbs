<h3 class="display-4 mb-1">Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{story.title}}" required>           
        </div>

        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" name="status" aria-label="Story Status">
                {{!-- {{#select story.status}} --}}
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
                {{!-- {{/select}} --}}
        </select>
        </div>
        
        <div class="mb-3">
            <label for="body" class="form-label">Tell Us Your Story:</label>
            <textarea class="form-control" id="body" name="body" rows="10">{{story.body}}</textarea>         
        </div>

        <div class="mb-3">
            <button type="submit" value="Save" class="btn btn-primary">Save</button>
            <a href="/dashboard" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>